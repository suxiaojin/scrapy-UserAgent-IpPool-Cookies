import codecs,json

class QiushibaikePipeline(object):
    def __init__(self):
        self.file=codecs.open('qsbk.json','wb',encoding='utf-8')

    def process_item(self, item, spider):
        line=json.dumps(dict(item))+'\n'
        self.file.write(line.decode("unicode_escape"))
        return item
